{
  "name": "nano-cd",
  "version": "0.0.1",
  "description": "Ultra simple image-based k8s CD tool",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "lint": "eslint .",
    "prepublishOnly": "pnpm build && pnpm lint"
  },
  "keywords": [
    "kubernetes",
    "k8s",
    "cd",
    "tool"
  ],
  "author": "Onora Hubleur <onora.hubleur@pm.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onora-hbl/nanoCD.git"
  },
  "homepage": "https://github.com/onora-hbl/nanoCD#readme",
  "bugs": {
    "url": "https://github.com/onora-hbl/nanoCD/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.12.4",
  "dependencies": {
    "@kubernetes/client-node": "^1.3.0",
    "node-fetch": "^3.3.2",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "semver": "^7.7.2",
    "yaml": "^2.8.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/node-fetch": "^2.6.13",
    "@types/pino": "^7.0.5",
    "@types/semver": "^7.7.0",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
